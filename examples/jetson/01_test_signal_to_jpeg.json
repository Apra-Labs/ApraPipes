{
  "pipeline": {
    "name": "Jetson Test Signal to JPEG",
    "description": "Demonstrates Jetson hardware JPEG encoding using TestSignalGenerator (no camera required)"
  },
  "modules": {
    "source": {
      "type": "TestSignalGenerator",
      "props": {
        "width": 640,
        "height": 480,
        "pattern": "COLOR_BARS",
        "maxFrames": 100
      }
    },
    "color_convert": {
      "type": "ColorConversion",
      "props": {
        "conversionType": "RGB_TO_YUV420PLANAR"
      }
    },
    "encoder": {
      "type": "JPEGEncoderL4TM",
      "props": {
        "quality": 85
      }
    },
    "writer": {
      "type": "FileWriterModule",
      "props": {
        "strFullFileNameWithPattern": "/tmp/jetson_test/frame_????.jpg"
      }
    }
  },
  "connections": [
    { "from": "source", "to": "color_convert" },
    { "from": "color_convert", "to": "encoder" },
    { "from": "encoder", "to": "writer" }
  ]
}
