{
  "pipeline": {
    "name": "Jetson JPEG Decode/Encode",
    "description": "Demonstrates Jetson hardware JPEG decode and encode (no camera required). Uses existing test data."
  },
  "modules": {
    "reader": {
      "type": "FileReaderModule",
      "props": {
        "strFullFileNameWithPattern": "./data/frame.jpg",
        "readLoop": true,
        "maxIndex": 10
      },
      "comment": "Reads JPEG files - outputs EncodedImage"
    },
    "decoder": {
      "type": "JPEGDecoderL4TM",
      "comment": "Hardware JPEG decoder - outputs RawImage (MONO or RGB)"
    },
    "encoder": {
      "type": "JPEGEncoderL4TM",
      "props": {
        "quality": 85
      },
      "comment": "Hardware JPEG encoder - accepts RawImage (MONO or RGB)"
    },
    "writer": {
      "type": "FileWriterModule",
      "props": {
        "strFullFileNameWithPattern": "/tmp/jetson_test/encoded_????.jpg"
      }
    }
  },
  "connections": [
    { "from": "reader", "to": "decoder" },
    { "from": "decoder", "to": "encoder" },
    { "from": "encoder", "to": "writer" }
  ]
}
