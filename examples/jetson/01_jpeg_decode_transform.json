{
  "pipeline": {
    "name": "Jetson JPEG Decode and Resize",
    "description": "Reads JPEG files, decodes using Jetson L4TM hardware, resizes with CPU, and re-encodes"
  },
  "modules": {
    "reader": {
      "type": "FileReaderModule",
      "props": {
        "strFullFileNameWithPattern": "./data/frame_????.jpg",
        "readLoop": true,
        "maxIndex": 10,
        "outputFrameType": "EncodedImage"
      }
    },
    "decoder": {
      "type": "JPEGDecoderL4TM",
      "comment": "Hardware JPEG decoder - outputs HOST memory"
    },
    "resize": {
      "type": "ImageResizeCV",
      "props": {
        "width": 320,
        "height": 240
      },
      "comment": "CPU-based resize - works with HOST memory"
    },
    "encoder": {
      "type": "JPEGEncoderL4TM",
      "props": {
        "quality": 90
      },
      "comment": "Hardware JPEG encoder - inputs HOST memory"
    },
    "writer": {
      "type": "FileWriterModule",
      "props": {
        "strFullFileNameWithPattern": "/tmp/jetson_output/resized_????.jpg"
      }
    }
  },
  "connections": [
    { "from": "reader", "to": "decoder" },
    { "from": "decoder", "to": "resize" },
    { "from": "resize", "to": "encoder" },
    { "from": "encoder", "to": "writer" }
  ]
}
