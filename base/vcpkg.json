{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "$comment": "Cache bust: libarchive 3.5.2 fix - 2025-12-08",
  "name": "apra-pipes-cuda",
  "version": "0.0.1",
  "builtin-baseline": "4658624c5f19c1b468b62fe13ed202514dfd463e",
  "overrides": [
    {
      "name": "ffmpeg",
      "version": "4.4.3"
    },
    {
      "name": "libarchive",
      "version": "3.5.2"
    },
    {
      "name": "sfml",
      "version": "2.6.1"
    },
    {
      "name": "boost",
      "version": "1.84.0"
    },
    {
      "name": "opencv4",
      "version": "4.10.0",
      "port-version": 6
    },
    {
      "name": "openal-soft",
      "version": "1.23.1"
    },
    {
      "name": "nu-book-zxing-cpp",
      "version": "2.2.1"
    }
  ],
  "dependencies": [
    "pkgconf",
    {
      "name": "whisper",
      "default-features": false,
      "features": [
        "cuda"
      ]
    },
    {
      "name": "opencv4",
      "default-features": false,
      "features": [
        "contrib",
        "cuda",
        "cudnn",
        "dnn",
        "highgui",
        "jpeg",
        "nonfree",
        "png",
        "tiff",
        "webp"
      ]
    },
    {
      "name": "freeglut",
      "platform": "linux",
      "$reason": "macOS uses native GLUT framework"
    },
    "ffmpeg",
    "openh264-apra",
    "glfw3",
    "glew",
    "libjpeg-turbo",
    "bigint",
    "boost-math",
    "boost-system",
    "boost-filesystem",
    "boost-serialization",
    "boost-log",
    "boost-chrono",
    "boost-test",
    "boost-iostreams",
    "boost-dll",
    "boost-format",
    "boost-foreach",
    "nu-book-zxing-cpp",
    "liblzma",
    "bzip2",
    "zlib",
    "sfml",
    "brotli",
    {
      "name": "gtk3",
      "platform": "linux",
      "$reason": "GTK3 not used on macOS or Windows"
    },
    {
      "name": "glib",
      "default-features": false,
      "features": [
        "libmount"
      ],
      "platform": "(linux & x64)",
      "$reason": "skip linux:arm64 and windows"
    },
    {
      "name": "glib",
      "default-features": true,
      "platform": "windows"
    },
    {
      "name": "hiredis",
      "platform": "!arm64"
    },
    {
      "name": "redis-plus-plus",
      "platform": "!arm64"
    },
    {
      "name": "re",
      "platform": "linux",
      "$reason": "libre only used on Linux (ARM64/CUDA builds)"
    },
    {
      "name": "baresip",
      "platform": "linux",
      "$reason": "baresip only used on Linux (ARM64/CUDA builds)"
    },
    {
      "name": "libmp4"
    },
    {
      "name": "pthreads",
      "platform": "windows",
      "$comment": "Required for OpenCV CUDA build on Windows - provides pthread.h and pthreads.lib"
    }
  ]
}
