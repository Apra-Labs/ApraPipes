{
  "pipeline": {
    "name": "CUDA Processing Chain Demo",
    "description": "Demonstrates a GPU processing chain: resize, blur, and color effects all on the GPU before downloading. Output: ./data/testOutput/cuda_chain_????.jpg"
  },
  "modules": {
    "generator": {
      "type": "TestSignalGenerator",
      "props": {
        "width": 800,
        "height": 600,
        "maxFrames": 300
      }
    },
    "color_convert": {
      "type": "ColorConversion",
      "props": {
        "conversionType": "YUV420PLANAR_TO_RGB"
      }
    },
    "upload_gpu": {
      "type": "CudaMemCopy",
      "props": {
        "kind": "HostToDevice"
      }
    },
    "resize": {
      "type": "ResizeNPPI",
      "props": {
        "width": 640,
        "height": 480
      }
    },
    "blur": {
      "type": "GaussianBlur",
      "props": {
        "kernelSize": 7
      }
    },
    "effects": {
      "type": "EffectsNPPI",
      "props": {
        "brightness": 20,
        "contrast": 1.2
      }
    },
    "download_cpu": {
      "type": "CudaMemCopy",
      "props": {
        "kind": "DeviceToHost"
      }
    },
    "encoder": {
      "type": "ImageEncoderCV",
      "props": {
        "quality": 95
      }
    },
    "writer": {
      "type": "FileWriterModule",
      "props": {
        "strFullFileNameWithPattern": "./data/testOutput/cuda_chain_????.jpg"
      }
    }
  },
  "connections": [
    { "from": "generator", "to": "color_convert" },
    { "from": "color_convert", "to": "upload_gpu" },
    { "from": "upload_gpu", "to": "resize" },
    { "from": "resize", "to": "blur" },
    { "from": "blur", "to": "effects" },
    { "from": "effects", "to": "download_cpu" },
    { "from": "download_cpu", "to": "encoder" },
    { "from": "encoder", "to": "writer" }
  ]
}
