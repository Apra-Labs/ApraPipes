{
  "pipeline": {
    "name": "CUDA Resize Demo",
    "description": "Demonstrates GPU-accelerated image resizing using NVIDIA NPP. Resizes 640x480 to 320x240. Output: ./data/testOutput/cuda_resize_????.jpg"
  },
  "modules": {
    "generator": {
      "type": "TestSignalGenerator",
      "props": {
        "width": 640,
        "height": 480,
        "maxFrames": 300
      }
    },
    "color_convert": {
      "type": "ColorConversion",
      "props": {
        "conversionType": "YUV420PLANAR_TO_RGB"
      }
    },
    "upload_gpu": {
      "type": "CudaMemCopy",
      "props": {
        "kind": "HostToDevice"
      }
    },
    "resize": {
      "type": "ResizeNPPI",
      "props": {
        "width": 320,
        "height": 240
      }
    },
    "download_cpu": {
      "type": "CudaMemCopy",
      "props": {
        "kind": "DeviceToHost"
      }
    },
    "encoder": {
      "type": "ImageEncoderCV",
      "props": {
        "quality": 90
      }
    },
    "writer": {
      "type": "FileWriterModule",
      "props": {
        "strFullFileNameWithPattern": "./data/testOutput/cuda_resize_????.jpg"
      }
    }
  },
  "connections": [
    { "from": "generator", "to": "color_convert" },
    { "from": "color_convert", "to": "upload_gpu" },
    { "from": "upload_gpu", "to": "resize" },
    { "from": "resize", "to": "download_cpu" },
    { "from": "download_cpu", "to": "encoder" },
    { "from": "encoder", "to": "writer" }
  ]
}
