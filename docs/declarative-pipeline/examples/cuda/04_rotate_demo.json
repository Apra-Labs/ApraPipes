{
  "pipeline": {
    "name": "CUDA Rotate Demo",
    "description": "Demonstrates GPU-accelerated image rotation using NVIDIA NPP. Rotates images by 45 degrees. Output: ./data/testOutput/cuda_rotate_????.jpg"
  },
  "modules": {
    "generator": {
      "type": "TestSignalGenerator",
      "props": {
        "width": 640,
        "height": 480
      }
    },
    "color_convert": {
      "type": "ColorConversion",
      "props": {
        "conversionType": "YUV420PLANAR_TO_RGB"
      }
    },
    "upload_gpu": {
      "type": "CudaMemCopy",
      "props": {
        "kind": "HostToDevice"
      }
    },
    "rotate": {
      "type": "RotateNPPI",
      "props": {
        "angle": 45.0
      }
    },
    "download_cpu": {
      "type": "CudaMemCopy",
      "props": {
        "kind": "DeviceToHost"
      }
    },
    "encoder": {
      "type": "ImageEncoderCV",
      "props": {
        "quality": 90
      }
    },
    "writer": {
      "type": "FileWriterModule",
      "props": {
        "strFullFileNameWithPattern": "./data/testOutput/cuda_rotate_????.jpg"
      }
    }
  },
  "connections": [
    { "from": "generator", "to": "color_convert" },
    { "from": "color_convert", "to": "upload_gpu" },
    { "from": "upload_gpu", "to": "rotate" },
    { "from": "rotate", "to": "download_cpu" },
    { "from": "download_cpu", "to": "encoder" },
    { "from": "encoder", "to": "writer" }
  ]
}
